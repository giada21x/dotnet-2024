@page
@model ProdottiModel
@{
    ViewData["Title"] = "Prodotti";
}
<h1>@ViewData["Title"]</h1>
<table class="table text-center">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Prezzo</th>
            <th>Dettaglio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prodotto in Model.Prodotti)
        {
            <tr>
                <td>@prodotto.Nome</td>
                <td>@prodotto.Prezzo</td>
                <td>@prodotto.Dettaglio</td>
            </tr>
        }
    </tbody>
</table>
<br>
<div class="container text-center">
  <div class="row align-items-center">
    <div class="col">
        <b>
      Nome
      </b>
      <hr>
      @foreach (var prodotto in Model.Prodotti)
        {
            
            <div>@prodotto.Nome</div>
        }
    </div>
    <div class="col">
        <b>
     Prezzo
     </b>
     <hr>
      @foreach (var prodotto in Model.Prodotti)
        {
            <div>@prodotto.Prezzo</div>
        }
    </div>
    <div class="col">
        <b>
      Dettaglio
      </b>
      
      <hr>
      @foreach (var prodotto in Model.Prodotti)
        {
            
            <div>@prodotto.Dettaglio</div>
        }
    </div>
    
  </div>
</div>
<br>
<div class="card-group ">
    @foreach (var prodotto in Model.Prodotti)
        {
  <div class="card m-2">
    <img src="https://source.unsplash.com/random/300x200?sig=1&technology" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">@prodotto.Nome</h5>
      <p class="card-text">@prodotto.Dettaglio</p>
      <p class="card-text"><small class="text-body-secondary">@prodotto.Prezzo</small></p>
      <a href="#" class="btn btn-dark">Pagina Prodotto</a>
    </div>
  </div>
  
  }
</div> 
