@page
@model VideogiocoDettaglioModel
@{
    ViewData["Title"] = "Videogioco Dettaglio";
}

<h1>@ViewData["Title"]</h1>


<br>
<div class="row g-0">
    <div class="col-md-4">
      <img src="@Model.Videogioco.Immagine" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
    
      <div class="card-body">
        <h5 class="card-title">Id: @Model.Videogioco.Id</h5>
        <p class="card-text">Titolo: @Model.Videogioco.Titolo</p>
        <p class="card-text">Anno: @Model.Videogioco.Anno</p>
        <p class="card-text">Genere: @Model.Videogioco.Genere</p>
        
        
      </div>
    </div>
  </div>
  

<a asp-page="Videogiochi">Torna a Videogiochi</a>