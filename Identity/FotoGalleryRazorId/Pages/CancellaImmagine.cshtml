@page
@using FotoGalleryRazorId.Pages
@model CancellaImmagineModel
@{
    ViewData["Title"] = "Cancella Immagine";
}


<div class="container">
    <div class="text-center">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <h3>Vuoi eliminare l'immagine? </h3>
